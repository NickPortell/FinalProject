

<body>
    <div>
        @if (ViewBag.Ability != null && ViewBag.Name != null &&
            ViewBag.State.State != null && ViewBag.Img != null &&
            ViewBag.Max != null && ViewBag.SuggestedItems != null)
        {
        <div class="text1">
            <p class="line-1 anim-typewriter">The Ability: @ViewBag.Ability</p>
            <p>The Crime: @ViewBag.Name</p>
            <p>The State with Highest rate of that crime: @ViewBag.State.State - Crime Rate (per 100K): @ViewBag.Max </p>
        </div>
            <p>

                <img id="foregroundPic" src=@ViewBag.Img alt="@ViewBag.State.State" />
            </p>

            <div class="table1">
                <table class="table">
                    <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Suggested Use</th>
                        @*<th>stuff</th>*@
                    </tr>
                    @foreach (var item in ViewBag.SuggestedItems)
                    {
                        <tr>
                            <td>@item.ItemName</td>
                            <td>@item.Description</td>
                            <td>@item.Cost</td>
                            @*<td>@item.Availability</td>*@
                            <td>@item.Crime</td>
                        </tr>
                    }
                </table>
            </div>

        }

        @*<form action="../Algorithm/Index" method="post">
            <button type="submit" value="@Model">Get Suggested Franchise</button>
        </form>*@
    </div>
</body>
<style>

    @@import url(https://fonts.googleapis.com/css?family=Anonymous+Pro);

    html, body {
        background-image: url('../../Pictures/gothamblue.jpg');
        height: 100%;
        background-size: cover;
        color: darkorange;
    }

    .container body-content {
        position: fixed;
    }

    #backgroundPic {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: auto;
        z-index: -1;
    }

    #foregroundPic {
        position: relative;
        background-size: contain;
        display: inline-block;
        float: left;
        width: 400px;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 5px;
        border: solid;
        border-color: darkgoldenrod;
    }

    table, th, td {
        background-color: darkblue;
        border: solid;
    }

    .text1{
        margin-top: 15px;
        font-weight:bold;
        font-family:'Copperplate Gothic';
        font-size: 20px;

    }

    
</style>




