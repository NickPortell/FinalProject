@using FinalProject.Models
<h1>@ViewBag.Title</h1>
<h1>@ViewBag.Message</h1>
<div style="position:relative;">
    <img src="~/Pictures/tablet.png" id="pic"/>
    <div style="position:absolute;display:flex;justify-content:center;align-items:center;">
        <table id="table" class="table">
            <tr>
                <th>Item</th>
                <th>Description</th>
                <th>Cost</th>
                <th>Availability</th>
                <th>Buy</th>
            </tr>
            @foreach (Item item in Model)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Description</td>
                    <td>$@item.Cost.ToString("0.00")</td>
                    <td>@item.Availability</td>
                    <td><form action="../Shop/Purchase"><input type="number" min="1" max="100" value="1" name="quantity" required /><button type="submit" name="id" value="@item.Id">Buy</button></form></td>
                </tr>
            }
        </table>
    </div>
</div>

<style>
    #pic {
        background-size: contain;
        position:fixed;
        display: inline-block;
        float: left;
        margin-left: auto;
        margin-right: auto;
    }

    #table {
        background-size: contain;
        display: inline-block;
        float: left;
        margin-top: 20%;
        margin-left: 20%;
        margin-right: 20%;
        margin-bottom: 20%;
    }
</style>